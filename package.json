{
  "name": "caseta2mqtt",
  "version": "0.6.1",
  "scripts": {
    "clean": "rimraf dist && mkdirp dist/data",
    "start": "npm run build && cd dist && node .",
    "build": "npm install && npm run clean && concurrently npm:build:server npm:build:client",
    "watch": "npm install && npm run clean && concurrently npm:watch:server npm:watch:client npm:watch:run",
    "test": "npm install && npm run clean && concurrently npm:build:server npm:build:client && npm run test:run",
    "build:server": "ncc build server/src/main.ts -o dist",
    "watch:server": "ncc build server/src/main.ts -o dist -w",
    "build:client": "cd client && ng build --no-progress --configuration=production",
    "watch:client": "cd client && ng build --watch",
    "watch:run": "cd dist && wait-on index.js www/index.html && nodemon --ignore data/* .",
    "test:run": "concurrently -k -s first npm:test:run:app npm:test:run:e2e",
    "test:run:app": "cd dist && node .",
    "test:run:e2e": "wait-on http://localhost:4600 && cypress run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "10.2.1",
    "@angular/cdk": "10.2.6",
    "@angular/common": "10.2.1",
    "@angular/compiler": "10.2.1",
    "@angular/core": "10.2.1",
    "@angular/forms": "10.2.1",
    "@angular/material": "10.2.6",
    "@angular/platform-browser": "10.2.1",
    "@angular/platform-browser-dynamic": "10.2.1",
    "@angular/router": "10.2.1",
    "async-mqtt": "2.6.1",
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "express-ws": "4.0.0",
    "get-port": "^5.1.1",
    "html-to-text": "6.0.0",
    "param-case": "3.0.3",
    "rxjs": "6.6.3",
    "safe-json-stringify": "1.2.0",
    "telnet-client": "1.4.6",
    "time-stamp": "2.2.0",
    "tslib": "2.1.0",
    "wait-on": "5.2.1",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1002.0",
    "@angular/cli": "10.2.0",
    "@angular/compiler-cli": "10.2.1",
    "@angular/language-service": "10.2.1",
    "@types/express": "4.17.11",
    "@types/express-ws": "3.0.0",
    "@types/jasmine": "3.6.3",
    "@types/jasminewd2": "2.0.8",
    "@types/node": "14.14.22",
    "@zeit/ncc": "0.22.3",
    "aedes": "0.44.1",
    "codelyzer": "6.0.1",
    "concurrently": "5.1.0",
    "cypress": "6.3.0",
    "jasmine-core": "3.5.0",
    "jasmine-spec-reporter": "6.0.0",
    "karma": "6.0.3",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "mkdirp": "1.0.4",
    "nodemon": "2.0.7",
    "rimraf": "3.0.2",
    "telnet": "0.0.1",
    "ts-loader": "8.0.11",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "4.0.5"
  }
}